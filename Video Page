  <script>
    // JavaScript to swap videos and images
    const recentIframe = document.getElementById('recent-iframe');
    const recentTitle = document.getElementById('recent-title');
    const recentDescription = document.getElementById('recent-description');
    const videoCards = document.querySelectorAll('.video-card');

    videoCards.forEach(card => {
      card.addEventListener('click', () => {
        // Get data from the clicked card
        const newVideoUrl = card.getAttribute('data-video-url');
        const newTitle = card.getAttribute('data-title');
        const newDescription = card.getAttribute('data-description');
        const newImageUrl = card.getAttribute('data-image-url');

        // Store the current video info for swapping
        const currentVideoUrl = recentIframe.src;
        const currentTitle = recentTitle.innerText;
        const currentDescription = recentDescription.innerText;

        // Swap the video content in the "Recents" section
        recentIframe.src = newVideoUrl; // Autoplay the new video
        recentTitle.innerText = newTitle;
        recentDescription.innerText = newDescription;

        // Swap the clicked card's content with the recent video info
        card.setAttribute('data-video-url', currentVideoUrl);
        card.querySelector('img').src = newImageUrl;
        card.querySelector('h4').innerText = newTitle;
      });
    });
  </script>

